root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[pyproject.toml]
indent_style = space
indent_size = 4 